{
  "name": "flower-ecommerce-server",
  "version": "1.0.0",
  "description": "Backend server for flower e-commerce application",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "cd frontend && npm run build && cd .. && cp -r frontend/dist/* public/ && tsx watch src/index.ts",
    "dev:server": "tsx watch src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
    "prebuild": "cd frontend && pnpm install && pnpm run build",
    "build": "cp -r frontend/dist/* public/ && pnpm install && tsc",
    "build:vercel": "node -e \"require('fs').mkdirSync('dist/public', {recursive: true})\" && cp -r public/* dist/public/",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "concurrently": "^8.2.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.1.4",
    "typescript": "^5.2.2"
  }
}
